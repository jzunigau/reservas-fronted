{
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "cd frontend; npm install",
  "framework": "create-react-app",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 